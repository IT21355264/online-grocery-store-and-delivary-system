.jbtn{
	width:145px;
	height:30px;
	
	



}

.table{
	width:75%;
	text-align:center;
}
.td{
	text-align:center;
	cursor: pointer;
	border: solid 3px gray;
	background: #efefef;
	padding:2%;
	 
}

.td:hover{
	background: gray;
	 
}
.img{
	width:150px;
	height:150px;
}


.item-code{
	font-size:25px;
	color:black;
	font-weight: bold;
}
.item-name{
	font-size:20px;
	color:gray;
	font-weight:bold;
	
	color: #000;
    padding-top: 0.875rem;
    padding-bottom:15px;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    text-overflow: ellipsis;
	
	
}
.price
{
	color: #64bf47;
    font-family: "Foco-Bold";
	padding-bottom:15px;
	font-size:20px;
}

.imgcart{
	width:30px;
	height:30px;
	cursor: pointer;
}



.spanCart {
    vertical-align: middle;
    width: 25px;
    height: 20px;
    background: red;
    /* margin-top: -20px; */
    position: absolute;
    color: white;
    font-weight: bold;
    text-align: center;
    border-radius: 10px;
	cursor: pointer;
}


