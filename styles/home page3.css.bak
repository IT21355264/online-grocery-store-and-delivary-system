}

.dropdown {
  right:100%;
  display: inline-block;
  float: right;
}

.dropdown-content {
  display: none;
  position: absolute;
  background-color: white;
  min-width: 160px;
  box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
  z-index: 1;
  margin-top: 10px;
  margin-bottom: 0;
  margin-right: 10px;
  margin-left: 10px; 
}
.dropdown-content a {
  color: black;
  padding: 12px 16px;
  text-decoration: none;
  display: block;
}
.dropdown-content a:hover {background-color: #006600}

.dropdown:hover .dropdown-content { display: block;}

.dropdown:hover .dropbtn {background-color: #006600;}

